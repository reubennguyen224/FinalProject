<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="335dp"
    android:layout_height="430dp"
    android:orientation="vertical"
    android:background="@drawable/background_new_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SuccessDialogFragment">

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:src="@drawable/ic_dialog"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:id="@+id/imgDialog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order has been successfull"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center"
        android:singleLine="true"
        android:id="@+id/txtHeaderDialog"
        android:layout_marginTop="45dp"/>

    <TextView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="we will contact the seller so that it can be sent immediately to the destination"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="3sp"
        android:textColor="#516971"
        android:textAlignment="center"
        android:id="@+id/txtMessage"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.03"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="35dp"
        android:id="@+id/btnOK"
        android:textAlignment="center"
        android:layout_marginBottom="42dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="center"/>
</LinearLayout>